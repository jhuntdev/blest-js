  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhuntdev/blest-js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://blest.jhunt.dev",
